<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Calculator entry history </title>
    <style>
        table {
            font-family: 'Courier New', Courier, monospace;
            border-collapse: collapse;
            width: 100%;
        }

        th {
            border: 4px solid white;
            text-align: center;
            padding: 4px;
            background-color: rgb(157, 197, 197);
            color: white;
        }

        td {
            border: 4px solid white;
            text-align: left;
            padding: 4px;
        }

        tr:nth-child(odd) {
            background-color: rgb(139, 161, 161);
        }

        tr:nth-child(even) {
            background-color: rgb(214, 226, 214);
        }

        .header {
            padding: 8px;
            font-weight: 800;
            font-family: sans-serif;
            text-align: center;
            margin-top: 2px;
            text-transform: uppercase;
            font-size: 1.9em;
            color: rgb(19, 14, 14);
            letter-spacing: 1px;
            border-bottom: 6px solid rgb(158, 136, 144);
            margin-bottom: 20px;
            letter-spacing: 2px;

        }
    </style>
</head>

<body>
    <h1>Records Entry Detail</h1>
    <div class="tdata">
        <table border="1">
            <tr>
                <th>First number</th>
                <th>Second number</th>
                <th>Result</th>
                <th>Operator</th>
                <th>Time</th>
            </tr>
            <% item.forEach(function(data){%>
                <tr>
                    <td>
                        <%- data.first_no%>
                    </td>
                    <td>
                        <%- data.second_no%>
                    </td>
                    <td>
                        <%- data.res%>
                    </td>
                    <td>
                        <%- data.ope%>
                    </td>
                    <td>
                        <%- data.time_inserted%>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>
</body>